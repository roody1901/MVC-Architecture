                 <input class="search" type="text"  name="getby" placeholder="Please enter customer Id and press enter"></input> </form>
              </div>
			
    </div>
</section>


  
 @foreach (var item in Model)  
{
     <section class="customer_details" style="display: flex;">
       <div class="customer_d">
          <div class="cus_details">
           <div class="maindetials">
               <div class="secdetails">
                <p>@Html.DisplayNameFor(model => model.Id):<span style="font-weight:700px"> @Html.DisplayFor(modelItem => item.Id)   </span></p>
            </div> 
             <div class="secdetails">
                <p>@Html.DisplayNameFor(model => model.Fullname) :<span style="font-weight:700px"> @Html.DisplayFor(modelItem => item.Fullname)</span></p>
            </div>

             <div class="secdetails">
                <p>@Html.DisplayNameFor(model => model.Adress):<span style="font-weight:700px"> @Html.DisplayFor(modelItem => item.Adress)   </span></p>
            </div>  
            
             <div class="secdetails">
                <p>@Html.DisplayNameFor(model => model.Email):<span style="font-weight:700px"> @Html.DisplayFor(modelItem => item.Email)  </span></p>
            </div>
    
             <div class="secdetails">
                <p>@Html.DisplayNameFor(model => model.Contact):<span style="font-weight:700px">   @Html.DisplayFor(modelItem => item.Contact)   </span></p>
            </div>

             <div class="secdetails">
                <p> @Html.DisplayNameFor(model => model.Atmpin):<span style="font-weight:700px">    @Html.DisplayFor(modelItem => item.Atmpin)   </span></p>
            </div>

             <div class="secdetails">
                <p> @Html.DisplayNameFor(model => model.AccountType): <span style="font-weight:700px">  @Html.DisplayFor(modelItem => item.AccountType)   </span></p>
            </div>

              <div class="secdetails">
                <p>  @Html.DisplayNameFor(model => model.AccountNumber):<span style="font-weight:700px">   @Html.DisplayFor(modelItem => item.AccountNumber)   </span></p>
            </div>

             <div class="secdetails">
                <p> @Html.DisplayNameFor(model => model.Balance) : <span style="font-weight:700px"> @Html.DisplayFor(modelItem => item.Balance)</span></p>
            </div>
             <div class="curdop">
				<div class="curdbtn">@Html.ActionLink("Edit", "Edit", new { id = item.Id}) </div>
				<div class="curdbtn" > @Html.ActionLink("Delete", "Delete", new { id = item.Id })</div>
               </div>
          </div>    
        </div>
      </div>
    </section>  
