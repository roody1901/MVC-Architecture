 <h1 style="font-size: 40px;margin-bottom: 15px;text-align:center;">Admin Pannel</h1>
<p>  
   
</p>  
<section>
    <div class="header">
			<img src="~/atmlogo.jpeg" alt="Girl in a jacket" style="width:70px;height:40px;">
				<div class="menu">       
				   @Html.ActionLink("AddCustomer", "AddCustomer")
				 @Html.ActionLink("Home", "Index","Home")
				  <a href="investing.asp">Investing</a>
				  <a href="about.asp">About Us</a>
				  <a  href="help.asp" style="/* background: rebeccapurple; */border: 1px solid rebeccapurple;padding: 7px 10px;border-radius: 6px;color: rebeccapurple;font-weight: 600;font-family: sans-serif;font-size: 15px;"> HELP?</a>
